if [ $metal -eq "Mg" ]; then
  # set atom name/type and radius
  set sel [atomselect top {name Mof_H}]
  sed -i "s/RADIUSMof_H/1.2/" filename
  $sel set name Mof_H
  $sel set type Mof_H
  $sel set mass 1.008
  $sel set charge 0.15

  # set atom name/type and radius
  set sel [atomselect top {name Zn1}]
